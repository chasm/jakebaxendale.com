{
	"name": "jakebaxendale.com",
	"version": "0.0.78",
	"private": true,
	"homepage": "https://jakebaxendale.com/",
	"license": "MIT",
	"author": "Charles Munat <charles.munat@gmail.com>",
	"type": "module",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	},
	"scripts": {
		"api": "vercel dev --listen 3010",
		"astro": "astro",
		"build": "astro build",
		"bump": "pnpm version patch --force",
		"bump:major": "pnpm version major --force",
		"bump:minor": "pnpm version minor --force",
		"check:exports": "pnpx find-unused-exports",
		"check:packages": "pnpx npm-check -u",
		"dep": "pnpm fmt && pnpm lint && pnpm lint:fix && pnpm check:packages && infisical run -- pnpm build && rm -rf .cache .history dist",
		"dep:prod": "pnpm dep:dev && vercel deploy",
		"dev": "astro dev",
		"fmt": "pnpm prettier . --write",
		"lint": "pnpx oxlint@latest",
		"lint:css": "pnpm stylelint \"src/**/*.css\"",
		"lint:fix": "pnpm stylelint \"src/**/*.css\" --fix",
		"login": "infisical login -i",
		"preview": "astro preview",
		"push": "git add -A && pnpm bump && git push",
		"start": "astro dev",
		"test": "pnpm test:int"
	},
	"devDependencies": {
		"@astrojs/mdx": "^4.3.0",
		"@astrojs/sitemap": "^3.4.1",
		"@astrojs/vercel": "^8.2.0",
		"@js-temporal/polyfill": "^0.5.1",
		"@types/qrcode": "^1.5.5",
		"@vercel/node": "^5.3.0",
		"astro": "^5.10.1",
		"prettier": "^3.6.1",
		"prettier-plugin-astro": "^0.14.1",
		"qrcode": "^1.5.4",
		"rollup": "^4.44.1",
		"stylelint": "^16.21.0",
		"stylelint-config-standard": "^38.0.0",
		"typescript": "^5.8.3",
		"vercel": "^44.2.5",
		"vite": "^7.0.0",
		"vite-plugin-compress": "^2.1.1",
		"vitest": "^3.2.4"
	}
}
