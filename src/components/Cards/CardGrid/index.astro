---
import type { Card } from "~types"

export type Props = {
	items: Array<Card>
}

const { items = [] } = Astro.props
---

<>
	{
		items.map(({ blurb, href, src, subtitle, title, year }) => (
			<a
				class="card"
				{href}
				rel="external"
			>
				<h2>
					{title} ({year})
				</h2>
				<p>{subtitle}</p>
				{blurb ? <Fragment set:html={blurb} /> : null}
				{src ? (
					<img
						alt=""
						{src}
						width="320"
					/>
				) : null}
			</a>
		))
	}
</>
