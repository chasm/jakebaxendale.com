---
export type Props = {
	caption?: string | undefined
	video: number | string
}

const { caption, video } = Astro.props

const site = process.env.SITE_DOMAIN || "jakebaxendale.com"
---

<figure>
	<iframe
		allowfullscreen
		src={`https://player.twitch.tv/?video=${video}&parent=${site}`}
	>
	</iframe>
	{caption ? <figcaption set:html={caption} /> : null}
</figure>
