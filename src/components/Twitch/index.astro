---
export type Props = {
	caption?: string | undefined
	video: number | string
}

const { caption, video } = Astro.props
---

<figure>
	<iframe
		allowfullscreen
		src={`https://player.twitch.tv/?video=${video}&parent=jakebaxendale-com.vercel.app`}
	>
	</iframe>
	{caption ? <figcaption set:html={caption} /> : null}
</figure>
